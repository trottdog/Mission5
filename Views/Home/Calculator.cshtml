@{
    ViewData["Title"] = "Tutoring Calculator";
    var rate = (decimal)ViewBag.HourlyRate;
}

<h1 class="mb-3">Tutoring Cost Calculator</h1>
<p class="text-muted">
    Enter how many hours you want help learning about motorcycles. The total is calculated using jQuery.
</p>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <label for="hoursInput" class="form-label">Hours needed</label>
                    <input id="hoursInput" class="form-control" type="number" min="0" step="0.5" placeholder="e.g., 2" />
                    <div id="hoursError" class="text-danger mt-1" style="display:none;">
                        Please enter a positive number of hours.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="rateInput" class="form-label">Hourly rate</label>
                    <input id="rateInput" class="form-control" type="text" value="$@rate" readonly />
                </div>

                <button id="calcBtn" class="btn btn-primary">Calculate total</button>

                <hr />

                <div class="mb-2">
                    <label for="totalOutput" class="form-label">Total</label>
                    <input id="totalOutput" class="form-control" type="text" readonly />
                </div>

                <a class="btn btn-link ps-0" asp-controller="Home" asp-action="Index">
                    ‚Üê Back to home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pass the C# hourly rate into JS safely
        window.MOTO_RATE = @rate;
    </script>
    <script src="~/js/calculator.js" asp-append-version="true"></script>
}